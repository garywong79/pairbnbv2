<h2>Please post your answer</h2>
<h3><%= @question.question_detail %></h3>

<form method="post" action ="/questions/<%= @question.id %>/answer" >

	<textarea class="form-control" rows="5" placeholder="enter your answer" name="answer[answer_detail]"></textarea>
	<input name="answer[user_id]" type="hidden" value=<%=current_user.id %> />

	<button type="submit" class="btn btn-default">submit</button>

</form>

<% if @answer &&  @answer.errors.full_messages.each do |error|%>
<%= error %>
	<% end %>
<% end %>